2. Java program to find the circumference and area of a circle with a given radius
Ans.2 import java.util.Scanner;
    public class CircleAreaCircum {
	static final double pie = 3.14;

	static double areaCalc(double radius) {
		double area = pie * radius * radius;
		return area;
	}

	static double circumferenceCalc(double radius) {
		double circumference = 2 * pie * radius;
		return circumference;
	}

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter the radius of a circle : ");
		int radius = sc.nextInt();

		double area = areaCalc(radius);
		double circumference = circumferenceCalc(radius);

		System.out.println("Circumference: " + String.format("%.2f", circumference));

		System.out.println("Area: " + String.format("%.2f", area));

	}
}

