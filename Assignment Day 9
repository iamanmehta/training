Ques.1. Take values of length and breadth of a rectangle from user and check if it is square or not.
import java.util.Scanner;
class figure {
	static void rectChecker(int length, int breadth) {
		if (length == breadth) {
			System.out.println("This is a Square of sides: " + length + "x" + breadth);
		} else {
			System.out.println("This is not a square!");
		}
	}
}

public class App {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.print("Enter length of the figure: ");
		int length = sc.nextInt();

		System.out.print("Enter breadth of the figure: ");
		int breadth = sc.nextInt();
		sc.close();
		
		figure.rectChecker(length, breadth);

	}
}

